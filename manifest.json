{
  "manifest_version": 3,
  "name": "Text Summarizer & Scraper",
  "version": "1.0",
  "description": "Summarize selected text and scrape data.",
  "permissions": [
      "activeTab",
      "storage"
  ],
  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["content.js"]
      }
  ],
  "background": {
      "service_worker": "background.js"
  },
  "action": {
      "default_popup": "popup.html",
      "default_icon": {
          "16": "images/icon16.png",
          "48": "images/icon48.png",
          "128": "images/icon128.png"
      }
  },
  "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
  }    
}
